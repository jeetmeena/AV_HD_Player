<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:visibility="visible"
    app:behavior_peekHeight="60dp"
    android:fitsSystemWindows="true"
    app:layout_behavior="android.support.design.widget.BottomSheetBehavior"
     android:onClick="onClick"
    android:elevation="6dp"
    android:background="@color/theme_color_7"
     >


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="2dp"
            android:id="@+id/ll"
            >
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_weight="1"
                android:id="@+id/linearLayout_Bottom"
                android:onClick="onClick"
                android:clickable="true"

                >
                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                   android:layout_margin="10dp"
                    android:background="@drawable/ashok_galaxyn"
                    android:scaleType="fitXY"
                    android:id="@+id/bottom_image"

                    />
                   <LinearLayout
                       android:layout_width="match_parent"
                       android:layout_height="match_parent"
                       android:orientation="vertical"
                       >
                       <TextView
                           android:id="@+id/bottom_Title"
                           android:layout_width="match_parent"
                           android:layout_height="wrap_content"
                           android:layout_marginTop="5dp"
                           android:singleLine="true"
                           android:ellipsize="marquee"
                           android:marqueeRepeatLimit="marquee_forever"
                           android:textColor="@color/fab_material_white"
                           android:textSize="20dp"
                           android:text="Hello This is the Nice S sffsfdsdf"

                            />
                       <TextView
                           android:layout_width="match_parent"
                           android:layout_height="wrap_content"
                           android:singleLine="true"
                           android:id="@+id/bottom_SubTitle"
                           android:textColor="@color/fab_material_white"
                           android:text="Nice Song Is playsgsdsdgd" />


                   </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_weight="0.4"
                android:gravity="center"
                android:id="@+id/linearButton"


                >

                <Button
                    android:id="@+id/bottomPlay"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"

                    android:background="@drawable/exo_controls_play"

                     />


            </LinearLayout>
        </LinearLayout>






    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/rel"
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true">

            <ImageView

                android:id="@+id/image2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/ashok_galaxyn"
                android:scaleType="fitXY"
                />


        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/rel1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:background="#DD282B3C"
            >


            <SeekBar

                android:id="@+id/seekBar"
                style="@style/Widget.AppCompat.SeekBar"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:layout_marginBottom="12dp"
                android:layout_toEndOf="@+id/textView4"
                android:layout_toStartOf="@+id/textView3"
                 />


            <LinearLayout
                android:id="@+id/ll1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/seekBar"

                android:gravity="center_horizontal"

                >

                <Button
                    android:id="@+id/back"
                    android:layout_width="50dp"
                    android:layout_height="40dp"
                    android:layout_marginBottom="10dp"

                    android:background="@drawable/exo_controls_previous"
                    android:textAppearance="@style/TextAppearance.AppCompat.Small" />

                <Button

                    android:id="@+id/play1"
                    android:layout_width="50dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:textAppearance="@style/TextAppearance.AppCompat.Small" />

                <Button
                    android:id="@+id/next"
                    android:layout_width="50dp"
                    android:layout_height="40dp"

                    android:background="@drawable/exo_controls_next"

                    android:textAppearance="@style/TextAppearance.AppCompat.Small" />
            </LinearLayout>

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/seekBar"
                android:layout_alignEnd="@+id/textView3"
                android:textColor="@color/fab_material_white"
                />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/seekBar"
                android:layout_alignParentEnd="true"
                android:layout_marginBottom="3dp"
                android:layout_marginRight="5dp"
                android:text="00:00"
                android:textColor="@color/fab_material_white"
                />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:layout_marginLeft="5dp"
                android:layout_alignParentStart="true"
                android:layout_alignTop="@+id/seekBar"
                android:textColor="@color/fab_material_white"
                android:text="00:00" />
        </RelativeLayout>
    </RelativeLayout>


    </LinearLayout>

